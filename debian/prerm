#!/bin/bash
# Pre-removal script for speech-to-text package
# Runs before package is removed

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

print_step() {
    echo -e "${BLUE}==>${NC} $1"
}

print_success() {
    echo -e "${GREEN}✓${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}⚠${NC} $1"
}

# Detect the actual user (not root)
if [ -n "$SUDO_USER" ]; then
    ACTUAL_USER="$SUDO_USER"
elif [ -n "$PKEXEC_UID" ]; then
    ACTUAL_USER=$(getent passwd "$PKEXEC_UID" | cut -d: -f1)
else
    ACTUAL_USER=$(logname 2>/dev/null || echo "$USER")
fi

# Get user's home directory
ACTUAL_HOME=$(getent passwd "$ACTUAL_USER" | cut -d: -f6)

echo ""
echo "╔═══════════════════════════════════════════════════════════╗"
echo "║        Speech-to-Text Package Removal                   ║"
echo "╚═══════════════════════════════════════════════════════════╝"
echo ""

# Stop and disable service
print_step "Stopping speech-to-text service"
export XDG_RUNTIME_DIR="/run/user/$(id -u "$ACTUAL_USER")"

# Try to stop the service (don't fail if not running)
if sudo -u "$ACTUAL_USER" systemctl --user is-active speech-to-text &>/dev/null; then
    sudo -u "$ACTUAL_USER" systemctl --user stop speech-to-text || true
    print_success "Service stopped"
else
    print_warning "Service was not running"
fi

# Try to disable the service (don't fail if not enabled)
if sudo -u "$ACTUAL_USER" systemctl --user is-enabled speech-to-text &>/dev/null; then
    sudo -u "$ACTUAL_USER" systemctl --user disable speech-to-text || true
    print_success "Service disabled"
else
    print_warning "Service was not enabled"
fi

# Reload systemd daemon
sudo -u "$ACTUAL_USER" systemctl --user daemon-reload || true

print_success "Service cleanup complete"

# Note about preserved files
echo ""
print_warning "Note: User configuration preserved at:"
print_warning "  $ACTUAL_HOME/.config/speech-to-text/"
echo ""
print_warning "To completely remove, run:"
print_warning "  rm -rf $ACTUAL_HOME/.config/speech-to-text/"
echo ""

exit 0
